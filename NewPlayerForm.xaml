<Window x:Class="FIFA_Market_Tracker.NewPlayerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFA_Market_Tracker"
        mc:Ignorable="d"
        Title="NewPlayerForm" Height="230" Width="200">
    <StackPanel>
        <TextBlock Text="Add a new player: " FontWeight="Bold" FontSize="16"/>
        <Label FontSize="16">Name:</Label>
        <TextBox FontSize="16" Margin="5">New name here...</TextBox>
        <Label FontSize="16">Overall:</Label>
        <TextBox FontSize="16" Margin="5">Overal here (0-99)</TextBox>
        <Button x:Name="createPlayerButton" Margin="5" Click="createPlayerButton_Click" FontSize="16"> Submit</Button>
    </StackPanel>
</Window>
